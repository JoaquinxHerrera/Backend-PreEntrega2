<div class="login">
    <h1>Complete your information</h1>
    <form>
        <div>
            <label for="name">Name</label>
            <input id="inputName" type="text" name="name" placeholder="Name" autocomplete="on">
        </div>
        <div>
            <label for="surname">Surname</label>
            <input id="inputSurname" type="text" name="surname" placeholder="Surname" autocomplete="on">
        </div>
        <div>
            <label for="email">Email</label>
            <input id="inputEmail" readonly>
        </div>
        <button type="submit">Modify</button>
    </form>
</div>
<script src="/static/js/edit.js"></script>